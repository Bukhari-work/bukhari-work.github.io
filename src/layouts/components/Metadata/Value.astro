---
const { icon, label, index, font } = Astro.props;

const slideAnim = {
  old: {
    name: "slideDown",
    duration: "0.3s",
    easing: "ease-out",
    fillMode: "backwards",
  },
  new: {
    name: "slideUp",
    duration: "0.3s",
    delay: `${index * 0.1 + 0.1}s`,
    easing: "ease-out",
    fillMode: "backwards",
  },
};

const verticalSlide = {
  forwards: slideAnim,
  backwards: slideAnim,
};
---

<li transition:animate={verticalSlide}>
  <div
    class={`flex items-center gap-3
           h-12 px-4 leading-none whitespace-nowrap
           rounded-2xl border-2 border-darkmode-border dark:border-border
           text-sm font-semibold font-${font}`}
  >
    {icon}
    {label}
  </div>
</li>
