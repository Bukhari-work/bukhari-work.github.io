---
import ImageMod from "@/components/ImageMod.astro";

// Props for dynamic data
const {
  title = "GRAND CANYON",
  subtitle = "Angels Triumph Hike",
  user = "Rover Barkton",
  date = "July 2023",
  backgroundImage = "/images/your-image.jpg",
  profileImage = "/images/profile-image.jpg",
} = Astro.props;
---

<div class="card card-project
  border-[0.625rem]
  group">
  <!-- Full Background Image -->
  <div class="absolute inset-0 w-full h-full">
    <img src={backgroundImage} alt="Background" class="w-full h-full" />
    <!-- Overlay for Text Visibility -->
  </div>

  <div class="relative z-10 flex flex-col h-full">
    <!-- Overlay for Text Visibility -->
    <div
      class="absolute inset-8 rounded-lg bg-body dark:bg-darkmode-body opacity-60 dark:opacity-60"
    >
    </div>

    <!-- Title and Subtitle -->
    <div
      class="relative text-center m-auto overflow-hidden text-primary dark:text-darkmode-primary
      group-hover:scale-105 transition-all"
    >
      <h2
        class="drop-shadow-[0_0_5px_rgba(0,0,0,0.5)]
        dark:drop-shadow-[0_0_5px_rgba(255,255,255,0.5)]"
      >
        {title}
      </h2>
      <h4
        class="dark:text-shadow dark:drop-shadow-white dark:drop-shadow-[0_0_2px_rgba(0,0,0,0.5)]"
      >
        {subtitle}
      </h4>
    </div>
  </div>
</div>
