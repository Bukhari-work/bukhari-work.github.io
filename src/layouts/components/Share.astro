---
import config from "@/config/config.json";
import { IoLogoLinkedin, IoPaperPlane } from "react-icons/io5";
import { IoLogoWhatsapp } from "react-icons/io";

const { base_url }: { base_url: string } = config.site;

interface shareProps {
  title?: string;
  description?: string;
  collection?: string;
  slug?: string;
  className?: string;
}
const { title, description, collection, slug, className } =
  Astro.props as shareProps;
---

<ul class={`${className}`}>
  <li class="inline-block">
    <a
      aria-label="whatsapp share button"
      href={`https://wa.me/?text=${title}%20${base_url}/${collection}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoWhatsapp />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="email share button"
      href={`mailto:?subject=${title}&body=${description}%20${base_url}/${collection}/${slug}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoPaperPlane />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${base_url}/${collection}/${slug}&title=${title}&summary=${description}&source=${base_url}`}
      target="_blank"
      rel="noreferrer noopener"
    >
      <IoLogoLinkedin />
    </a>
  </li>
</ul>
